<% d = Date.today %>
<% today = d.wday %>
<% if today == 1 %>
	<% today = "Monday" %>
<% elsif today == 2 %>
	<% today = "Tuesday" %>
<% elsif today == 3 %>
	<% today = "Wednesday" %>
<% elsif today == 4 %>
	<% today = "Thursday" %>
<% elsif today == 5 %>
	<% today = "Friday" %>
<% elsif today == 6 %>
	<% today = "Saturday" %>
<% elsif today == 7 %>
	<% today = "Sunday" %>
<% end %>

<head>
	<title>
		Greenu - Chicago Farmers Markets
	</title>
</head>

<div role="main">

	<div id="home_header">

		<div class="container">

		<h1> It's <span><%= today %></span>, <br /> Find the Closest <br /> Farmers Market </h1>

		</div>

		<div class="footer_arrow">
			<a href="#middle"></a>
		</div>

	</div>
	
	</div>

<div id="middle">

	<%= form_tag market_url, :method => 'post' do %>
		<p> 
			<%= text_field_tag :search, params[:zip] %>
			<%= submit_tag "Search", :name => nil %>
		</p>
	<% end %>
	<br />

	<% d = Date.today %>
	<% today = d.wday %>
	<% if today == 1 %>
		<% today = "open_monday" %>
	<% elsif today == 2 %>
		<% today = "open_tuesday" %>
	<% elsif today == 3 %>
		<% today = "open_wednesday" %>
	<% elsif today == 4 %>
		<% today = "open_thursday" %>
	<% elsif today == 5 %>
		<% today = "open_friday" %>
	<% elsif today == 6 %>
		<% today = "open_saturday" %>
	<% elsif today == 7 %>
		<% today = "open_sunday" %>
	<% end %>

	<% today = today.parameterize.underscore.to_sym %>

	<ul id="box">
		<% Market.where(today => true).each do |m| %>
			<li>
				<h3><%= m["name"] %></h3>
				<ul> 
			    	<li><%= m["address"] %> | 
			    	<% if Market.where(:linkcard => true) %>
			    		<span> Linkcard Accepted </span> 
    				<% end %></li>
			    <ul>
		   </li>
		   <br />
	 	   <% end %>
	</ul>

</div>

<!-- div role="main" -->
</div>







